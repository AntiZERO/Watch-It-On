<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <h1>Sign up</h1>
      <form action="/users" method="POST">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input type="firstName" class="form-control" name="firstName" aria-describedby="firstNameHelp" placeholder="Clark">
          <small class="text-muted" id="firstNameHelp">Please enter your first name.</small>
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input type="lastName" class="form-control" name="lastName" aria-describedby="lastNameHelp" placeholder="Kent">
          <small class="text-muted" id="lastNameHelp">Please enter your last name.</small>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="ckent@thedailyplanet.com">
          <small class="text-muted" id="emailHelp">Must be a valid email address.</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Choose a Password">
          <small class="text-muted" id="passwordHelp">Enter a password of your choosing.</small>
        </div>
        <div class="form-group">
          <label for="passwordConfirmation">Password Confirmation</label>
          <input type="password" class="form-control" name="passwordConfirmation" aria-describedby="passwordHelp" placeholder="Confirm your Password">
          <small class="text-muted" id="passwordHelp">Confirmation must match the password you entered above.</small>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up Now</button>
      </form>
  
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>